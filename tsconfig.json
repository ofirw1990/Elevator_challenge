{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
